@model IEnumerable<LaboratorioExame.Models.Profissional>

@{
    ViewData["Title"] = "Index";
}

<h1>Profissional</h1>

<p>
    <a class="btn-criar" asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfissionaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProfissionaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo.CargoNome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProfissionalId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ProfissionalId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ProfissionalId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
