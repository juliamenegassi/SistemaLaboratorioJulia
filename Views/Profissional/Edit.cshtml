@model LaboratorioExame.Models.Profissional

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Profissional</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProfissionalId" />
            <div class="form-group">
                <label asp-for="ProfissionaNome" class="control-label"></label>
                <input asp-for="ProfissionaNome" class="form-control" />
                <span asp-validation-for="ProfissionaNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CargoId" class="control-label">Cargo</label>
                <select asp-for="CargoId" class="form-control" asp-items="ViewBag.CargoId"></select>
                <span asp-validation-for="CargoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="a" asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
