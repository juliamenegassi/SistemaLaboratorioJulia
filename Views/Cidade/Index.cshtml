@model IEnumerable<LaboratorioExame.Models.Cidade>

@{
    ViewData["Title"] = "Index";
}

<h1>Cidade</h1>

<p>
    <a class="btn-criar" asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CidadeNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado.EstadoNome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CidadeNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.EstadoNome)
            </td>
            <td>
                <a class="botao" asp-action="Edit" asp-route-id="@item.CidadeId">Editar</a> |
                <a class="botao" asp-action="Details" asp-route-id="@item.CidadeId">Detalhes</a> |
                <a class="botao" asp-action="Delete" asp-route-id="@item.CidadeId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
