@model LaboratorioExame.Models.Resultado

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Resultado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PacienteId" class="control-label">Paciente</label>
                <select asp-for="PacienteId" class ="form-control" asp-items="ViewBag.PacienteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ExameId" class="control-label">Exame</label>
                <select asp-for="ExameId" class ="form-control" asp-items="ViewBag.ExameId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ResultadoDescricao" class="control-label"></label>
                <input asp-for="ResultadoDescricao" class="form-control" />
                <span asp-validation-for="ResultadoDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataRealizacao" class="control-label"></label>
                <input asp-for="DataRealizacao" class="form-control" />
                <span asp-validation-for="DataRealizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfissionalId" class="control-label">Profissional</label>
                <select asp-for="ProfissionalId" class ="form-control" asp-items="ViewBag.ProfissionalId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ObservacaoResultado" class="control-label"></label>
                <input asp-for="ObservacaoResultado" class="form-control" />
                <span asp-validation-for="ObservacaoResultado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="a" asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
