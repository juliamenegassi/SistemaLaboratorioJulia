@model IEnumerable<LaboratorioExame.Models.Resultado>

@{
    ViewData["Title"] = "Index";
}

<h1>Resultado</h1>

<p>
    <a class="btn-criar" asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exame)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResultadoDescricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataRealizacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profissional)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObservacaoResultado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.PacienteNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exame.ExameNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResultadoDescricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataRealizacao)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.Profissional.ProfissionaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ObservacaoResultado)
            </td>
            <td>
                <a class="botao" asp-action="Edit" asp-route-id="@item.ResultadoId">Editar</a> |
                <a class="botao" asp-action="Details" asp-route-id="@item.ResultadoId">Detalhes</a> |
                <a class="botao" asp-action="Delete" asp-route-id="@item.ResultadoId">Deletar</a> |
                <a class="botao" asp-action="Imprimir" asp-route-id="@item.ResultadoId">Imprimir</a>
            </td>
        </tr>
}
    </tbody>
</table>
