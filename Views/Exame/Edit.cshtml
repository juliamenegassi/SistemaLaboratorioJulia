@model LaboratorioExame.Models.Exame

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Exame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExameId" />
            <div class="form-group">
                <label asp-for="ExameNome" class="control-label"></label>
                <input asp-for="ExameNome" class="form-control" />
                <span asp-validation-for="ExameNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExameObservacao" class="control-label"></label>
                <input asp-for="ExameObservacao" class="form-control" />
                <span asp-validation-for="ExameObservacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExameMaterial" class="control-label"></label>
                <input asp-for="ExameMaterial" class="form-control" />
                <span asp-validation-for="ExameMaterial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="a" asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
